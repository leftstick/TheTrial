{
    "parser": "babel-eslint",
    "parserOptions":{
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": true,
            "impliedStrict": false,
            "classes": true,
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "shared-node-browser": false,
        "browser": false,
        "commonjs": false,
        "node": false,
        "es6": true
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/prop-types": "off"
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}
